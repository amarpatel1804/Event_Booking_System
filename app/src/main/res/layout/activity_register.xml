<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/txtregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Register YourSelf"
        android:textColor="@color/headingText"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/registerimageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_85sdp"
        android:layout_marginTop="110dp"
        android:src="@drawable/groupprofile_picture"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerimageView">

        <EditText
            android:id="@+id/etxtname"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background"
            android:fontFamily="@font/poppins_regular"
            android:hint="Enter Name"
            android:paddingStart="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/_35sdp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:text="+91"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:textSize="19sp"
                android:background="@drawable/background"/>

            <EditText
                android:id="@+id/etxtphone"
                android:layout_width="@dimen/_186sdp"
                android:layout_height="45dp"
                android:background="@drawable/background"
                android:fontFamily="@font/poppins_regular"
                android:hint="Mobile no"
                android:inputType="number"
                android:paddingStart="15dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/etxtemail"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/background"
            android:fontFamily="@font/poppins_regular"
            android:hint="Email id"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/etxtpassword"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:background="@drawable/background"
            android:fontFamily="@font/poppins_regular"
            android:hint="Password"
            android:paddingStart="15dp" />

        <EditText
            android:id="@+id/etxtconfirmpassword"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:background="@drawable/background"
            android:fontFamily="@font/poppins_regular"
            android:hint="Confirm Password"
            android:paddingStart="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnregisternext"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutregister"
        android:backgroundTint="@color/blue"
        android:text="Next"
        android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>