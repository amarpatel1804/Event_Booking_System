<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RequirementAvtivity">

    <TextView
        android:id="@+id/txtreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Select Requirement"
        android:textColor="@color/headingText"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtreq">

        <Button
            android:id="@+id/btnhall"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/requirement_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_extrabold"
            android:text="Hall"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnpartyplot"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/requirement_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_extrabold"
            android:text="Party Plot"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btnbanquit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="@drawable/requirement_background"
            android:backgroundTint="@null"
            android:fontFamily="@font/poppins_extrabold"
            android:text="Banquet"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="30sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>